<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

<xacro:include filename = "inertial_macros.xacro" />

<material name = "white">
<color rgba = "1 1 1 1" />
</material>

<material name = "orange">
<color rgba = "1 0.3 0.1 1" />
</material>

<material name = "blue">
<color rgba = "0.2 0.2 1 1" />
</material>

<material name = "black">
<color rgba = "0 0 0 1" />
</material>

<material name = "red">
<color rgba = "1 0 0 1" />
</material>

<!-- BASE LINK -->
<link name = "base_link">

</link>

<!-- CHASSIS LINK -->
<joint name = "chassis_joint" type = "fixed" >
        <parent link = "base_link" />
        <child link = "chassis" />
        <origin xyz = "-0.1 0 0" />
</joint>

<link name = "chassis">
    <visual>
        <origin xyz = "0.135 0 0.05" /> <!--origin point-->
        <geometry>
            <box size = "0.368 0.257 0.137" /> <!--chassis dimensions(meters)-->
        </geometry>
        <material name = "white" />
    </visual>

    <collision>
        <origin xyz = "0.135 0 0.05" /> <!--origin point-->
        <geometry>
            <box size = "0.368 0.257 0.137" /> <!--chassis dimensions(meters)-->
        </geometry>
    </collision>

    <!-- moment of interia -->
    <xacro:inertial_box mass = "0.5" x = "0.368" y = "0.257" z = "0.137" >
       <origin xyz = "0.184 0 0.0685" rpy = "0 0 0"/>
    </xacro:inertial_box>  
</link>

<gazebo reference = "chassis">
     <material>Gazebo/White</material>
</gazebo>

<!-- LEFT WHEEL LINK-->

<joint name = "left_wheel_joint" type = "continuous">
     <parent link = "base_link" />
     <child link = "left_wheel" />
     <origin xyz = "-0.08 0.14 -0.015" rpy = "-${pi/2} 0 0" />
     <axis xyz = "0 0 1" />
</joint>

<link name = "left_wheel">
    <visual>
         <geometry>
              <cylinder radius = "0.04" length = "0.02" />
         </geometry>

         <material name = "blue" />
    </visual>

    <collision>
         <geometry>
              <cylinder radius = "0.04" length = "0.02" />
         </geometry>
    </collision>

    <!-- moment of inertia -->
    <xacro:inertial_cylinder mass = "0.2" length = "0.02" radius = "0.04" >
      <origin xyz = "0 0 0" rpy = "0 0 0" />
    </xacro:inertial_cylinder>
</link>

<gazebo reference = "left_wheel">
     <material>Gazebo/Blue</material>
</gazebo>


<!-- RIGHT WHEEL LINK-->

<joint name = "right_wheel_joint" type = "continuous">
     <parent link = "base_link" />
     <child link = "right_wheel" />
     <origin xyz = "-0.08 -0.14 -0.015" rpy = "${pi/2} 0 0" /> <!-- -0.175m from origin in y,roll,pitch,yaw-->
     <axis xyz = "0 0 -1" />
</joint>

<link name = "right_wheel">
    <visual>
         <geometry>
              <cylinder radius = "0.04" length = "0.02" />
         </geometry>

         <material name = "blue" />
    </visual>

    <collision>
         <geometry>
              <cylinder radius = "0.04" length = "0.02" />
         </geometry>
    </collision>

    <!-- moment of inertia-->
    <xacro:inertial_cylinder mass = "0.2" length = "0.02" radius = "0.04" >
    <origin xyz = "0 0 0" rpy = "0 0 0" />
    </xacro:inertial_cylinder>
</link>

<gazebo reference = "right_wheel">
     <material>Gazebo/Blue</material>
</gazebo>

<!-- CASTER WHEEL LINK -->

<joint name = "caster_wheel_joint" type="fixed">

    <parent link = "chassis" />
    <child link = "caster_wheel" />
    <origin xyz = "0.27 0 -0.015" rpy = "0 0 0"/>
</joint>

<link name = "caster_wheel" >
     <visual>
       <geometry>
         <sphere radius = "0.04" />
       </geometry>

       <material name = "black" />
     </visual>

     <collision>
       <geometry>
         <sphere radius = "0.04" />
       </geometry>
     </collision>

     <!-- moment of inertia -->
     <xacro:inertial_sphere mass = "0.2" radius = "0.04" >
     <origin xyz = "0 0 0" rpy = "0 0 0" />
     </xacro:inertial_sphere>
</link>

<gazebo reference = "caster_wheel">
     <material>Gazebo/Black</material>
     <mu1 value = "0.001" />
     <mu2 value = "0.001" />
</gazebo>

</robot>